.user-menu {
  width: 500rpx;
}

.menu-line-padding {
  padding: 0 10rpx;
  box-sizing: border-box;
}

.color-gray{
  color: #dddddd;
}

.user-info-box {
  position: relative;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.user-info-box .avatar {
  flex: none;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 80rpx;
  text-align: center;
  border-radius: 50%;
  overflow: hidden;
}
.user-info-box .name {
  flex: auto;
  font-size: 17px;
  font-weight: 400;
  text-align: left;
  margin-left: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.user-info-box .vip-status {
  flex: none;
  position: relative;
  width: 140rpx;
  margin-left: 20rpx;
  overflow: visible;
  font-weight: 400;
  font-size: 12px;
  text-align: right;
  color: #dddddd;
}
.user-info-box .isVip {
  color: rgba(230, 22, 45, 1);
}
.user-info-box .vip-status .buttom-tips {
  position: absolute;
  right: 0;
  bottom: -24px;
}

.user-info-box .no-login {
  flex: auto;
  margin-left: 20rpx;
}

.user-info-box .icon-user-fill {
  color: #dddddd;
}

.user-info-box .no-login .line1 {
  height: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.user-info-box .no-login .line1 .login-button {
  margin: 0;
  border: 0;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 24rpx;
  background-color: rgb(24, 144, 255);
  color: #fff;
  font-size: 14px;
  border-radius: 4px;
}

.user-info-box .no-login .line1 .login-button::after {
  display: none;
}

.user-info-box .no-login .line2 {
  height: 48rpx;
  line-height: 48rpx;
  text-align: left;
  font-weight: 400;
  font-size: 12px;
  color: #dddddd;
}

.user-menu-dividing {
  margin: 10rpx 0;
  border-bottom: 1px dotted #dddddd;
}

.user-menu-item-line {
  position: relative;
  width: 100%;
  height: 90rpx;
  font-size: 17px;
  font-weight: 400;
  text-align: left;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.user-menu-item-line .iconfont {
  color: #dddddd;
  font-size: 16px;
}
